<%- include('header') %>
<div class="container">
  <div class="selectcontainer">

      <div class="selector">
        <select ng-Cloak ng-model="controller.projects.select" class="selectP form-control">
          <option ng-repeat="option in controller.projects.avaible" value="{{option.id}}">{{option.title}}</option>
        </select>
      </div>

      <div class="selector">
      <color-picker ng-model="controller.color"
     color-picker-disabled="false"
    color-picker-format="rgb"
    color-picker-alpha="true"
    color-picker-swatch="true"
    color-picker-swatch-pos="right"
    color-picker-swatch-only="true"
    color-picker-pos="'bottom right'"
    color-picker-case="lower"
    class="colorp"
    ></color-picker>

    </div>
  </div>
</div>
<div class="container" >
<div class="col-lg-3" >
  <ul ng-Cloak><li ng-repeat="item in controller.tasks">{{item.title}}</li></ul>
</div>

<div class="col-lg-6">
 <div id="calendar" ui-calendar="controller.uiConfig.calendar" ng-model="controller.eventSources"></div>
  </div>
  <div class="col-lg-3" style="text-align:center">
  <ul ng-Cloak><li ng-repeat="item in controller.ProjectUsers"  data-toggle = "modal" data-target = "#myModal4">{{item.name}}</li></ul>
  </div>
</div>
<div class = "modal fade" id = "myModal4" tabindex = "-1" role = "dialog" 
   aria-labelledby = "myModalLabel" aria-hidden = "true">
   
   <div class = "modal-dialog" style="width:300px">
      <div class = "modal-content">
         
         <div class = "modal-header">
            <button type = "button" class = "close" data-dismiss = "modal" aria-hidden = "true">
               ×
            </button>
            
            <h4 class = "modal-title" id = "myModalLabel">
Üzenet            </h4>
         </div>
         
         <div class = "modal-body" style="text-align:center">
         <div class="col-lg-12" style="height:80%">Mév : Üzenet      Dátum</div>
          <div class="col-lg-12"><input type="text" /></div>
         </div>            
         </div>
         
      </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
   <button ng-click="controller.getclick()">ize </button>
</div><!-- /.modal -->
<%- include('footer') %>
